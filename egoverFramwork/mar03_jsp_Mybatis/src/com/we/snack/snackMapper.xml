<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="snackMapper">
	<insert id="insert" parameterType="com.we.snack.Snack">
		insert into mar03_snack
		values(mar03_snack_seq.nextval,#{s_name},#{s_price},#{s_exp})
	</insert>

	<select id="select" resultType="com.we.snack.Snack"
		parameterType="java.util.HashMap">
		select * from mar03_snack order by s_no
	</select>

	<select id="selectPage" resultType="com.we.snack.Snack"
		parameterType="java.util.HashMap">
		select * from(
		select rownum as rn, s_no, s_name, s_price, s_exp
		from(
		select * from mar03_snack
		where s_name like '%'||#{search}||'%'
		order by s_name
		)
		)
		where rn &gt;=#{start} and rn &lt;=#{end}
	</select>

	<select id="count" resultType="java.lang.Integer"><!-- int도 가능 -->
		select count(*) from mar03_snack
	</select>

</mapper>
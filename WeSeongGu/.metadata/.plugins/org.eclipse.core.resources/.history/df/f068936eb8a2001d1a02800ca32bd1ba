package com.we.main;

import java.util.Scanner;

public class HomeController {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ConsoleScreen cs =new ConsoleScreen();
		Scanner sc = new Scanner(System.in);
		int num =0;
		while(true){
			
			num = cs.whatDo();
			
			if(num == 10) {
				break;
			}else if(num==1) {
				
				String s=DAO.getCdho().insertCVS(cs.showRegCVSMenu());
				cs.sf(s);
			}else if(num==2) {
				Product p = cs.showProduct(DAO.getCdho().cvsNum());
				String s=DAO.getCdho().insertProduct(p);
				cs.sf(s);
			}else if(num == 3) {
				int p = DAO.getCdho().getAllPage();
				System.out.print("보고싶은 페이지를 입력하시오(총 "+p+"페이지) :");
				int ddd = sc.nextInt();
				cs.showSearch(DAO.getCdho().selectAll(ddd));
			}else if(num == 4) {
				
			}
			
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		cs.scannerClose();
	}

}

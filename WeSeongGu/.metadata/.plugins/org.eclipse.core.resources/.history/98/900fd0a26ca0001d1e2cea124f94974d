			System.out.println("위치: ");
			String w = k.next();
			System.out.println("주차 대수: ");
			int p = k.nextInt();
			
			// sql---------------------------------------------------------
			// 1) 자바 변수 값 들어갈 자리에 ?로 변경
			// 2) ;빼기
			String sql = "insert into jan30_restarea"+
					"VALUES (jan30_rest_seq.nextval, ?, ?, ?, ?)";
			
		} catch (SQLException e) {
